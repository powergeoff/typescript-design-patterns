{
  "editor.tabSize": 2,
  "[csharp]": {
    "editor.tabSize": 4
  },
  "typescript.tsdk": "./typescript",
  "files.associations": {
    "*.json": "jsonc"
  },
  "files.exclude": {
    "**/bin": true,
    "**/obj": true,
    "**/node_modules": true
  },
  "eslint.workingDirectories": [
    {
      "directory": "TYPESCRIPT-DESIGN-PATTERNS",
      "changeProcessCWD": true
    }
  ],
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit"
  },
  "omnisharp.enableEditorConfigSupport": true
}
